<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    {{#bs-form model=campaign contents=contents}}
      {{#form-group  property="name" label="Campaign Name"}}
        {{bs-input value=campaign.name}}
      {{/form-group}}

      
      {{#each campaign.actions as |action|}}
        {{#bs-form model=action}}
          {{#form-group  property="name" label="Action Name"}}
            {{bs-input value=action.name}}
          {{/form-group}}  

          {{#form-group property="content" label="Content"}}
            {{#power-select 
              options=contents
              selected=action.content
              onchange=(action (mut action.content)) as |content|
            }}
              {{content.name}}
            {{/power-select}}
          {{/form-group}}
        {{/bs-form}}        
      {{/each}} 


    {{/bs-form}}

    {{bs-button 
      text="Add Action"
      type="primary" 
      value=campaign 
      action=(action 'addAction')
    }}
    {{bs-button 
      text="Save" 
      type="primary"
      value=campaign
      action=(action 'save')
    }}

  </div>
</div>


{{outlet}}
